{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
            "es2017",
            "dom"
        ],
    "module": "commonjs",
    "moduleResolution": "node",
    // "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    // "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
  ], 
  "exclude": [
    "**/*_spec.ts"
  ]
}